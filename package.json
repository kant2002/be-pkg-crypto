{
    "name": "@kant2002-diia-inhouse/crypto",
    "version": "1.7.2",
    "description": "Tools for encryption and auth",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "repository": "https://github.com/diia-open-source/be-pkg-crypto.git",
    "author": "Diia",
    "license": "SEE LICENSE IN LICENSE.md",
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=13.14.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc",
        "semantic-release": "semantic-release",
        "start": "npm run build && node dist/index.js",
        "lint": "eslint --ext .ts . && prettier --check .",
        "lint-fix": "eslint '*/**/*.{js,ts}' --fix && prettier --write .",
        "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts registry.npmjs.org --validate-https",
        "prepare": "npm run build",
        "test": "jest",
        "test:unit": "npm run test --selectProjects unit --",
        "test:coverage": "npm run test --coverage --",
        "find-circulars": "madge --circular --extensions ts ./"
    },
    "dependencies": {
        "jsonwebtoken": "9.0.0",
        "node-jose": "2.2.0"
    },
    "peerDependencies": {
        "@kant2002-diia-inhouse/errors": ">=1.0.0",
        "@kant2002-diia-inhouse/types": ">=2.8.1",
        "@kant2002-diia-inhouse/utils": ">=2.1.0"
    },
    "devDependencies": {
        "@kant2002-diia-inhouse/configs": "^1.26.3",
        "@kant2002-diia-inhouse/diia-logger": "^2.10.0",
        "@kant2002-diia-inhouse/errors": "^1.6.1",
        "@kant2002-diia-inhouse/eslint-config": "^3.4.0",
        "@kant2002-diia-inhouse/test": "^5.1.0",
        "@kant2002-diia-inhouse/types": "^5.1.0",
        "@kant2002-diia-inhouse/utils": "^2.33.1",
        "@kant2002-diia-inhouse/validators": "^1.12.1",
        "@types/jsonwebtoken": "9.0.1",
        "@types/node": "18.15.11",
        "@types/node-jose": "1.1.10",
        "eslint-plugin-prettier": "5.1.3"
    },
    "release": {
        "extends": "@kant2002-diia-inhouse/configs/dist/semantic-release/package",
        "branches": [
            "main"
        ]
    },
    "commitlint": {
        "extends": "@kant2002-diia-inhouse/configs/dist/commitlint"
    },
    "eslintConfig": {
        "extends": "@kant2002-diia-inhouse/eslint-config",
        "overrides": [
            {
                "files": [
                    "*.ts"
                ],
                "parserOptions": {
                    "project": [
                        "./tsconfig.json",
                        "./tests/tsconfig.json"
                    ]
                }
            }
        ]
    },
    "jest": {
        "preset": "@kant2002-diia-inhouse/configs/dist/jest"
    },
    "prettier": "@kant2002-diia-inhouse/eslint-config/prettier",
    "madge": {
        "tsConfig": "./tsconfig.json"
    }
}
